{% extends 'base.html.twig' %}

{% block title %}Reader{% endblock %}

{% block body %}
    <h1>Reader</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ reader.id }}</td>
            </tr>
            <tr>
                <th>FirstName</th>
                <td>{{ reader.firstName }}</td>
            </tr>
            <tr>
                <th>LastName</th>
                <td>{{ reader.lastName }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ reader.email }}</td>
            </tr>
            <tr>
                <th>DateOfBirth</th>
                <td>{{ reader.dateOfBirth }}</td>
            </tr>
            <tr>
                <th>Gender</th>
                <td>{{ reader.gender }}</td>
            </tr>
            <tr>
                <th>PhoneNumber</th>
                <td>{{ reader.phoneNumber }}</td>
            </tr>
            <tr>
                <th>Address</th>
                <td>{{ reader.address }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ reader.password }}</td>
            </tr>
            <tr>
                <th>ProfilePicture</th>
                <td>{{ reader.profilePicture }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ reader.roles }}</td>
            </tr>
            <tr>
                <th>IsActive</th>
                <td>{{ reader.isActive ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ reader.createdAt ? reader.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_reader_index') }}">back to list</a>

    <a href="{{ path('app_reader_edit', {'id': reader.id}) }}">edit</a>

    {{ include('reader/_delete_form.html.twig') }}
{% endblock %}
